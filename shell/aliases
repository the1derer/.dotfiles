## alias zshconfig="${EDITOR} ~/.zshrc"
## alias ohmyzsh="${EDITOR} ~/.oh-my-zsh"
alias dotfiles='cd $HOME/dotfiles'

alias cls='clear' # good 'ol clear-screen command
alias edit='vi' # TODO: temporary Solution to mitigate 'Error: no "edit" mailcap rules found for type' error

# TODO: change config to use `vimdiff` whenever `diff` is called
alias diff='vimdiff'

# mac_os like copy and paste from clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

alias open='xdg-open' # mac_ os like `open` command
alias o='xdg-open'

alias -s pdf="zathura"

alias gdst='git diff --stat'

# Checker Framework(https://checkerframework.org) aliases and environment variable
source ~/dotfiles/shell/checker-framework.sh

# java aliases
source ~/dotfiles/shell/aliases_java

# alias lsa='ls -a'

# local config
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
